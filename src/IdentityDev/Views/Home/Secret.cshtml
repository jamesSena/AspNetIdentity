@using IdentityDev.Extensions
@{
    ViewData["Title"] = "Segredo!";
}
<h1>@ViewData["Title"]</h1>

<p>Segredo!</p>

@{
    if (this.IfClaim("Produtos", "adicionar"))
    {
        <p> Você só verá isso se tiver permissao de adicionar</p>
    }
    <div>
        @Html.ActionLink("Secret", "Secret").IfClaimShow(Context, "Produtos", "adicionar")
    </div>
    <br/>
    <div>
        <a href="#" class="btn btn-danger" @Html.Raw(this.IfClaimShow("Produtos", "adicionar"))>Excluir</a>
    </div>
}

